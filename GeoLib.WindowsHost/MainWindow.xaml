<Window x:Class="GeoLib.WindowsHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />                
                </Grid.ColumnDefinitions> 
                <Button Name="btnStart" Click="btnStart_Click" Content="Start service" Grid.Row="0" Grid.Column="0"></Button>
                <Button Name="btnStop" Click="btnStop_Click" Content="Stop service" Grid.Row="1" Grid.Column="0"></Button>
        <TextBox Name="txtMessage" Grid.Row="3" Grid.Column="0"></TextBox>
        <Button Name="BtnSendMessgeWPF" Click="BtnSendMessgeWPF_Click" Content="Send message" Grid.Row="4" Grid.Column="0"></Button>
                
    </Grid>

</Window>
